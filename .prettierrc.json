{
  "overrides": [
    {
      "files": "*.sol",
      "options": {
        "printWidth": 95,
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": false,
        "bracketSpacing": false,
        "explicitTypes": "always"
      }
    },
    {
      "files": "*.ts",
      "options": {
        "printWidth": 100,
        "tabWidth": 2,
        "useTabs": false,
        "singleQuote": false,
        "explicitTypes": "always"
      }
    }
  ]
}
